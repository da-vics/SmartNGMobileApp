<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartNG.Views.Pages.ControlPages.AddServicePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:inputLayout="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
    xmlns:local="clr-namespace:SmartNG"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="LightGray"
    mc:Ignorable="d">


    <!--  Value Converter  -->
    <ContentPage.Resources>

        <ResourceDictionary>
            <local:ButtonTextVisibilityValueConverter x:Key="BtnVisibilityConverter" />
        </ResourceDictionary>

    </ContentPage.Resources>

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

        <Grid>

            <!--  Content Definitions  -->
            <Grid.RowDefinitions>

                <RowDefinition Height="Auto" />

                <RowDefinition Height="20*" />

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*" />

                <ColumnDefinition Width="50*" />

                <ColumnDefinition Width="50*" />

                <ColumnDefinition Width="50*" />

                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Margin="0"
                Padding="0"
                FontAttributes="Bold"
                FontFamily="{x:StaticResource KalamRegularFont}"
                FontSize="30"
                HorizontalOptions="Start"
                Text="Add New Device"
                TextColor="DarkRed"
                VerticalOptions="FillAndExpand" />


            <StackLayout
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Margin="0"
                Padding="0"
                HorizontalOptions="Start"
                Spacing="10">

                <inputLayout:SfTextInputLayout
                    Margin="0"
                    Padding="5"
                    ContainerBackgroundColor="White"
                    ContainerType="Outlined"
                    ErrorColor="Red"
                    ErrorText="{Binding ServiceValidation, Mode=TwoWay}"
                    FocusedColor="DarkGray"
                    HasError="{Binding HasServiceNameError}"
                    Hint="ServiceName"
                    OutlineCornerRadius="8">
                    <Entry
                        Margin="0"
                        ReturnType="Next"
                        Text="{Binding ServiceName, Mode=TwoWay}" />
                </inputLayout:SfTextInputLayout>


                <inputLayout:SfTextInputLayout
                    Margin="0"
                    Padding="5"
                    ContainerBackgroundColor="White"
                    ContainerType="Outlined"
                    ErrorColor="Red"
                    ErrorText="{Binding WeightValidation, Mode=TwoWay}"
                    FocusedColor="DarkGray"
                    HasError="{Binding HasWeightError}"
                    Hint="Cylinder Weight(KG)"
                    OutlineCornerRadius="10">
                    <Entry
                        Margin="0"
                        Keyboard="Numeric"
                        ReturnType="Next"
                        Text="{Binding CylinderWeight, Mode=TwoWay}" />
                </inputLayout:SfTextInputLayout>

                <Grid Margin="0" Padding="5">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="8*" />
                        <ColumnDefinition Width="*" />

                    </Grid.ColumnDefinitions>

                    <inputLayout:SfTextInputLayout
                        Grid.Column="0"
                        Margin="0"
                        Padding="5"
                        ContainerBackgroundColor="White"
                        ContainerType="Outlined"
                        ErrorColor="Red"
                        ErrorText="{Binding DeviceIdValidation, Mode=TwoWay}"
                        FocusedColor="DarkGray"
                        HasError="{Binding HasDeviceIdError}"
                        Hint="DeviceId"
                        OutlineCornerRadius="8">
                        <Entry
                            Margin="0"
                            IsEnabled="False"
                            Keyboard="Text"
                            Text="{Binding DeviceId, Mode=TwoWay}" />
                    </inputLayout:SfTextInputLayout>


                    <StackLayout
                        Grid.Column="1"
                        Margin="0"
                        Padding="0"
                        VerticalOptions="Center">

                        <StackLayout
                            BackgroundColor="DarkRed"
                            Opacity="0.5"
                            VerticalOptions="Start">
                            <ImageButton
                                BackgroundColor="Transparent"
                                BorderColor="Transparent"
                                BorderWidth="0"
                                Command="{Binding ScanQRCodeCommand}"
                                Source="qrcodeicon.png" />
                        </StackLayout>
                        <Label
                            FontAttributes="Bold"
                            FontFamily="{x:StaticResource KalamRegularFont}"
                            HorizontalOptions="Center"
                            Text="Click!"
                            TextColor="DarkRed"
                            VerticalOptions="Start" />
                    </StackLayout>


                </Grid>

                <!--#region SubmitBtn-->
                <Grid>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="10" />

                        <ColumnDefinition Width="*" />

                        <ColumnDefinition Width="*" />

                        <ColumnDefinition Width="*" />

                        <ColumnDefinition Width="10" />

                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Margin="0"
                        BackgroundColor="DarkRed"
                        BorderColor="Transparent"
                        BorderWidth="0"
                        Command="{Binding AddNewServiceCommand}"
                        CornerRadius="15"
                        IsVisible="{Binding isAddService, Converter={x:StaticResource BtnVisibilityConverter}}"
                        Opacity="0.9"
                        Style="{x:StaticResource CustomActionBtn}"
                        Text="Add Device"
                        TextColor="White"
                        VerticalOptions="Center" />

                    <ActivityIndicator
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        IsEnabled="{Binding isAddService}"
                        IsRunning="{Binding isAddService}"
                        IsVisible="{Binding isAddService}"
                        Color="{x:StaticResource _DarkBlue}" />
                </Grid>

            </StackLayout>


        </Grid>



    </StackLayout>


</ContentPage>