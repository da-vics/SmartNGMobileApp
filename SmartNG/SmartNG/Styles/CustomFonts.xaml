<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <OnPlatform x:Key="MainFont" x:TypeArguments="x:String">

        <On Platform="Android" Value="bradhitc.ttf#Bradley Hand ITC" />
        <On Platform="iOS" Value="bradhitc.ttf" />

    </OnPlatform>


    <OnPlatform x:Key="KalamBoldFont" x:TypeArguments="x:String">

        <On Platform="Android" Value="Kalam-Bold.ttf#Kalam" />
        <On Platform="iOS" Value="Kalam-Bold.ttf" />

    </OnPlatform>


    <OnPlatform x:Key="KalamRegularFont" x:TypeArguments="x:String">

        <On Platform="Android" Value="Kalam-Regular.ttf#Kalam" />
        <On Platform="iOS" Value="Kalam-Regular.ttf" />

    </OnPlatform>

    <OnPlatform x:Key="HeaderFont" x:TypeArguments="x:String">

        <On Platform="Android" Value="FrancoisOne-Regular.ttf#FrancoisOne" />
        <On Platform="iOS" Value="FrancoisOne-Regular.ttf" />

    </OnPlatform>



</ResourceDictionary>