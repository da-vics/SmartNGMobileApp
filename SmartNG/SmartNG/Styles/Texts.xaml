<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <!--#region  Custom Header Style-->
    <Style x:Key="CustomHeadLabel" TargetType="Label">

        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontFamily" Value="{x:StaticResource KalamRegularFont}" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="Margin" Value="0" />

    </Style>
    <!--#endregion-->

    <!--#region  Custom Entry Style-->
    <Style x:Key="CustomEntry" TargetType="Entry">

        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontFamily" Value="{x:StaticResource KalamRegularFont}" />

    </Style>
    <!--#endregion-->


</ResourceDictionary>