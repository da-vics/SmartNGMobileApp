<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <!--#region Borderless Btn-->
    <Style x:Key="BorderlessBtn" TargetType="Button">
        <Setter Property="Margin" Value="0 0 0 5" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{x:StaticResource _DarkBlue}" />
        <Setter Property="FontSize" Value="15" />

    </Style>
    <!--#endregion-->

    <!--#region  Custom Button-->

    <Style x:Key="CustomActionBtn" TargetType="Button">

        <Setter Property="Padding" Value="10" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BackgroundColor" Value="Gray" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="5 0 0 0" />
        <Setter Property="TextColor" Value="LightGray" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="BorderColor" Value="Transparent" />

    </Style>

    <!--#endregion-->


</ResourceDictionary>